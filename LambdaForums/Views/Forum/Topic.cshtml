@model LambdaForums.Models.Forum.ForumTopicModel

<h1>Welcome to the @Model.Forum.Name  Forum!</h1>

<span id="headingBtn">
    <a asp-controller="Post" 
    asp-action="Create" 
    asp-route-id=@Model.Forum.Id class="btn btn-newPost">
    Create Post
    </a>
</span>
@if (Model.Posts.Any())
{
    <table class="table table-bordered table-hover" id="1">
        <tbody>
            @foreach (var post in Model.Posts)
            {
                <tr>
                    <td>
                        <a asp-controller="Post" asp-action="Index" asp-route-id="@post.Id">
                            @post.Title
                        </a>
                    </td>
                    <td>
                        @post.AuthorName
                    </td>
                    <td>
                        @post.DatePosted
                    </td>
                    <td>
                        @post.RepliesCount
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

else
{
    <div class="noPosts">
        <h3>NIt looks like there are no @Model.Forum.Name  Posts yet.</h3>
        <a asp-controller="Post" asp-action="Create" asp-route-id="@Model.Forum.Id">
            <span>Create</span>
        </a>
    </div>
}
